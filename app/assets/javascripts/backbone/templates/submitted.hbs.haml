- cat = "{{ this.category }}"
- can_vote = "{{can_vote this.can_vote}}"
.wrapper
  .category-img
    = image_tag "categories/#{cat}.png"
  .description
    %p
      {{{detectLinks this.description }}}
  .info
    .category-name
      {{ this.category }}
    .time
      {{{formatSubmittedDate this.created_at}}}
    .owner
      {{this.name}}
    .comments-count{title: 'show/hide comments'}
      .comments_link
      %span {{ this.comments.length}}

.vote-controls
  .votes
    %span {{ this.votes }}
    %span VOTES
    .supporters{ hidden: 'hidden'}
      {{{ this.liked_by }}}

  = link_to '+1', '#', class: "#{can_vote} like"

.comments-area.hidden
{{isAdmin}}