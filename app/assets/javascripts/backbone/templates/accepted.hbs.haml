.description
  %p
    {{ this.description }}
.info
  .date
    {{ this.created_at }}
  .category-name
    = image_tag "categories/{{ this.category }}-small.png", title: "{{ this.category }}"
  .owner
    {{ this.name }}
  .comments-count{title: 'show/hide comments'}
    .comments_link
    {{ this.comments.length }}
  {{#unless this.isAdmin}}
  %div{ class: 'accepted' }
  {{/unless}}
{{#if this.isAdmin}}
.actions
  %a.reject.disabled-btn Reject
  %a.accept.disabled-btn Accept
  = link_to 'Complete', '#', {class: 'complete', title: 'Mark as done'}
  %div{ class: 'accepted' }
{{/if}}

.comments-area.hidden
