.description
  %p
    {{ this.description }}
.state
  .date
    {{ this.created_at }}
  .category-name
    {{ this.category }}
  .comments
  {{#unless this.isAdmin}}
  %div{ class: 'rejected' }
  {{/unless}}
{{#if this.isAdmin}}
.actions
  %a.reject.disabled-btn Reject
  %a.accept.disabled-btn Accept
  %a.complete.disabled-btn Complete
  %div{ class: 'rejected' }
{{/if}}
